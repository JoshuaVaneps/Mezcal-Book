<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="css/jass.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <title>Mezcal Bible Information</title>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-dark px-2 sticky-top position-sticky zindex-sticky"
    >
      <a class="navbar-brand d-flex mx-auto" href="#"><img
          src="images/Screenshot_2023-06-06_145750-removebg-preview.png"
          alt="reyes mezcaleria logo"
        /></a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/mezcal">Mezcal</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tequila">Tequila</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cocktail">Cocktails</a>
          </li>
          {{#if isManager}}
            <li class="nav-item">
              <a class="nav-link" href="/add-mezcal">Add Mezcal</a>
            </li>
          {{/if}}
          <li class="nav-item">
            {{#if loggedIn}}
              <a id="logout" class="nav-link">Logout</a>
            {{else}}
              <a href="/login" class="nav-link">Sign Up</a>
            {{/if}}
          </li>
          <li class="nav-item">
            <form class="form-inline mx-md-5">
              <input
                class="form-control mr-sm-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button
                class="btn btn-outline-success my-2 my-sm-2"
                type="submit"
              >
                Search
              </button>
            </form>
          </li>
        </ul>
      </div>
    </nav>
    <main>
      {{{body}}}
    </main>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <script src="js/search-js"></script>
    <script src="js/script.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
  </body>
</html>